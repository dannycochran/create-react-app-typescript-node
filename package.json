{
  "name": "cra-template",
  "version": "0.1.0",
  "private": true,
  "main": "build/server/index.js",
  "dependencies": {
    "express": "4.16.2",
    "http-status-codes": "1.3.0",
    "lodash": "4.17.5",
    "moment": "2.21.0",
    "path": "0.12.7",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-scripts-ts": "2.13.0"
  },
  "scripts": {
    "clean": "rm -rf build && rm -rf client/build",
    "deploy": "yarn run clean && yarn run build && git push heroku master",
    "deploy-dev": "yarn run clean && yarn run build && heroku local",
    "test": "concurrently --kill-others-on-fail \"cd client && yarn run test\" \"yarn run test-server\"",
    "test-server": "jest",
    "start": "concurrently --kill-others-on-fail \"yarn run server\" \"yarn run client\"",
    "build": "concurrently --kill-others-on-fail \"tsc\" \"yarn run build-client\"",
    "build-client": "cd client && yarn run build && cd - && cp -r client/build build/server/build",
    "client": "cd client && react-scripts-ts start",
    "server": "concurrently --kill-others-on-fail \"nodemon build/server/index.js\" \"tsc -w\""
  },
  "devDependencies": {
    "@types/express": "4.11.1",
    "@types/jest": "22.1.4",
    "@types/lodash": "4.14.104",
    "@types/node": "9.4.6",
    "concurrently": "3.5.1",
    "nodemon": "1.17.1",
    "supertest": "3.0.0",
    "ts-jest": "22.4.1",
    "typescript": "2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "app.test.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
